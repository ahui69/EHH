# Mordzix AI Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# AI API Keys
# =============================================================================

# OpenAI API Key (required for GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# DeepInfra API Key (required for alternative models)
DEEPINFRA_API_KEY=your_deepinfra_api_key_here

# =============================================================================
# Database Configuration
# =============================================================================

# Database URL (SQLite for development, PostgreSQL for production)
DATABASE_URL=sqlite:///mordzix.db

# Alternative database configurations
# DATABASE_URL=postgresql://user:password@localhost:5432/mordzix
# DATABASE_URL=mysql://user:password@localhost:3306/mordzix

# =============================================================================
# Server Configuration
# =============================================================================

# Server host and port
HOST=0.0.0.0
PORT=8000

# Debug mode (set to False in production)
DEBUG=True

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# Security Configuration
# =============================================================================

# Secret key for JWT tokens (generate a strong random string)
SECRET_KEY=your_secret_key_here

# JWT secret for token signing (generate a strong random string)
JWT_SECRET=your_jwt_secret_here

# JWT expiration time in hours
JWT_EXPIRATION_HOURS=24

# CORS origins (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:8000

# =============================================================================
# AI Model Configuration
# =============================================================================

# Default AI model
DEFAULT_MODEL=gpt-4

# Alternative models
# DEFAULT_MODEL=gpt-3.5-turbo
# DEFAULT_MODEL=claude-3-sonnet
# DEFAULT_MODEL=llama-2-70b

# Model temperature (0.0 to 1.0)
MODEL_TEMPERATURE=0.7

# Max tokens per response
MAX_TOKENS=4000

# =============================================================================
# Memory Configuration
# =============================================================================

# Enable hierarchical memory
ENABLE_MEMORY=True

# Memory storage type (sqlite, redis, postgresql)
MEMORY_STORAGE=sqlite

# Memory retention days
MEMORY_RETENTION_DAYS=30

# =============================================================================
# File Upload Configuration
# =============================================================================

# Maximum file size in MB
MAX_FILE_SIZE_MB=10

# Allowed file types
ALLOWED_FILE_TYPES=image/*,application/pdf,.txt,.doc,.docx,.csv,.json

# Upload directory
UPLOAD_DIR=uploads

# =============================================================================
# Voice Configuration
# =============================================================================

# Enable speech-to-text
ENABLE_STT=True

# Enable text-to-speech
ENABLE_TTS=True

# TTS voice (alloy, echo, fable, onyx, nova, shimmer)
TTS_VOICE=alloy

# =============================================================================
# Research Configuration
# =============================================================================

# Enable web research
ENABLE_RESEARCH=True

# Research API key (if using external service)
RESEARCH_API_KEY=your_research_api_key_here

# =============================================================================
# Cache Configuration
# =============================================================================

# Enable Redis caching
ENABLE_REDIS=False

# Redis URL (if using Redis)
REDIS_URL=redis://localhost:6379/0

# Cache TTL in seconds
CACHE_TTL=3600

# =============================================================================
# Monitoring Configuration
# =============================================================================

# Enable monitoring
ENABLE_MONITORING=True

# Monitoring endpoint
MONITORING_ENDPOINT=/metrics

# Health check endpoint
HEALTH_CHECK_ENDPOINT=/health

# =============================================================================
# Rate Limiting Configuration
# =============================================================================

# Enable rate limiting
ENABLE_RATE_LIMITING=True

# Rate limit per minute
RATE_LIMIT_PER_MINUTE=60

# Rate limit per hour
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# Email Configuration (for notifications)
# =============================================================================

# Enable email notifications
ENABLE_EMAIL=False

# SMTP server
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# SMTP credentials
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# From email
FROM_EMAIL=noreply@mordzix-ai.com

# =============================================================================
# External Services
# =============================================================================

# Weather API key (for weather queries)
WEATHER_API_KEY=your_weather_api_key_here

# News API key (for news queries)
NEWS_API_KEY=your_news_api_key_here

# Translation API key (for translation)
TRANSLATION_API_KEY=your_translation_api_key_here

# =============================================================================
# Development Configuration
# =============================================================================

# Enable development mode
DEVELOPMENT_MODE=True

# Enable hot reload
HOT_RELOAD=True

# Enable debug toolbar
DEBUG_TOOLBAR=False

# =============================================================================
# Production Configuration
# =============================================================================

# Enable production mode
PRODUCTION_MODE=False

# Enable SSL
ENABLE_SSL=False

# SSL certificate path
SSL_CERT_PATH=/path/to/cert.pem

# SSL key path
SSL_KEY_PATH=/path/to/key.pem

# =============================================================================
# Backup Configuration
# =============================================================================

# Enable automatic backups
ENABLE_BACKUPS=True

# Backup frequency (daily, weekly, monthly)
BACKUP_FREQUENCY=daily

# Backup retention days
BACKUP_RETENTION_DAYS=30

# Backup directory
BACKUP_DIR=backups

# =============================================================================
# Logging Configuration
# =============================================================================

# Log file path
LOG_FILE=logs/mordzix.log

# Log rotation
LOG_ROTATION=True

# Log max size in MB
LOG_MAX_SIZE_MB=10

# Log backup count
LOG_BACKUP_COUNT=5

# =============================================================================
# Performance Configuration
# =============================================================================

# Worker processes
WORKERS=4

# Worker timeout
WORKER_TIMEOUT=30

# Keep alive timeout
KEEP_ALIVE_TIMEOUT=5

# Max connections
MAX_CONNECTIONS=1000

# =============================================================================
# Feature Flags
# =============================================================================

# Enable new features
ENABLE_NEW_FEATURES=True

# Enable experimental features
ENABLE_EXPERIMENTAL=False

# Enable beta features
ENABLE_BETA=False

# =============================================================================
# Custom Configuration
# =============================================================================

# Add your custom configuration here
# CUSTOM_SETTING=your_value